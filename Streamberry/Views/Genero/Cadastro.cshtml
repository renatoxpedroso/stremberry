@model Streamberry.Models.GeneroModel

@{
    ViewData["Title"] = "Cadastro de Gêneros";
}

@section Breadcomb {
    <div class="col-md-10 page-title d-flex flex-column justify-content-center flex-wrap me-3">
        @if (Model.Id != Guid.Empty)
        {
            <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">Editar Gênero</h1>
        }
        else
        {
            <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">Cadastrar Gênero</h1>
        }

        <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
            <li class="breadcrumb-item text-muted">
                <a href="/Genero" class="text-muted text-hover-primary">Gêneros</a>
            </li>
            @if (Model.Id != Guid.Empty)
            {
                <li class="breadcrumb-item text-muted">Editar</li>
            }
            else
            {
                <li class="breadcrumb-item text-muted">Adicionar</li>
            }
        </ul>
    </div>
}
<hr />
<div class="d-flex flex-column gap-7 gap-lg-10">
    <div class="card card-flush">
        <div class="card-header border-0 pt-6">
            <div class="flex-row-fluid gap-5" data-kt-docs-table-toolbar="base">
                <div class="form-group row">

                    <form asp-action="Gravar">
                        <input type="hidden" asp-for="Id" id="Id" />
                        <div class="d-flex flex-column flex-row-fluid gap-7 gap-lg-10">
                            <div class="d-flex flex-column gap-7 gap-lg-10">
                                <div class="card card-flush">

                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <div class="campoCadastro form-group">
                                        <label asp-for="Nome" class="control-label"></label>
                                        <input asp-for="Nome" class="form-control" placeholder="Nome"/>
                                        <span asp-validation-for="Nome" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="containerCadastro d-flex justify-content-end">
                                <button type="reset" class="btn btn-light btn-active-light-primary me-2" onclick="location.href='/Genero'">Cancelar</button>
                                <button type="submit" id="submit" class="btn btn-primary">
                                    <span class="indicator-label">Salvar</span>
                                </button>
                            </div>
                        </div>
                        </br>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>