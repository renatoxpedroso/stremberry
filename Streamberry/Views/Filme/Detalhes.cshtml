@model Streamberry.Models.FilmeModel

@{
    ViewData["Title"] = "Classificação Filme";
}

@section Scripts {
    <script src="~/js/filme/detalhes.js"></script>
}


@section Breadcomb {
    <div class="col-md-10 page-title d-flex flex-column justify-content-center flex-wrap me-3">
        <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">Classificação Filme</h1>


        <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
            <li class="breadcrumb-item text-muted">
                <a href="/Filme" class="text-muted text-hover-primary">Filmes</a>
            </li>
            <li class="breadcrumb-item text-muted">Classificação</li>

        </ul>
    </div>
}
<hr />

<div class="row">
    <div class="col-md-12">
        <form>
            <input type="hidden" asp-for="Id" id="Id" />
            <div class="d-flex flex-column flex-row-fluid gap-7 gap-lg-10">
                <div class="d-flex flex-column gap-7 gap-lg-10">
                    <div class="card card-flush">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="campoCadastro form-group">
                            <label asp-for="Titulo" class="control-label"></label>
                            <input asp-for="Titulo" class="form-control" disabled />
                            <span asp-validation-for="Titulo" class="text-danger"></span>
                        </div>
                        <div class="campoCadastro form-group">
                            <label asp-for="Ano" class="control-label"></label>
                            <input type="number" asp-for="Ano" class="form-control" min="1900" max="2100" step="1" maxlength="4" disabled>
                            <span asp-validation-for="Ano" class="text-danger"></span>
                        </div>
                        <div class="campoCadastro form-group">
                            <label asp-for="IdGenero" class="control-label"></label>
                            <select asp-for="IdGenero" class="form-control" disabled>
                                @if (ViewBag.Genero != null)
                                {
                                    foreach (var genero in ViewBag.Genero)
                                    {

                                        if (Model.IdGenero != Guid.Empty)
                                        {
                                            if (Model.IdGenero.ToString() == genero.Value)
                                            {
                                                <option value="@genero.Value" selected>@genero.Text</option>
                                            }
                                            else
                                            {
                                                <option value="@genero.Value">@genero.Text</option>
                                            }
                                        }
                                        else
                                        {
                                            <option value="@genero.Value">@genero.Text</option>
                                        }
                                    }
                                }
                            </select>
                        </div>
                    </div>
                </div>
            </div>

            </br>

            <div class="col-md-12">
                <form id="form-comentario">
                    <div class="d-flex flex-column flex-row-fluid gap-7 gap-lg-10">
                        <div class="d-flex flex-column gap-7 gap-lg-10">
                            <div class="card card-flush">

                                <div class="campoCadastro form-group">
                                    <label class="form-label">Comentário</label>
                                    <input name="Comentario" class="form-control" />

                                </div>

                                <div class="campoCadastro form-group">
                                    <label class="form-label">Nota</label>
                                    <input name="Nota" class="form-control" />
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="containerCadastro d-flex justify-content-end">
                        <button type="reset" class="btn btn-light btn-active-light-primary me-2" onclick="location.href='/Filme'">Cancelar</button>
                        <button type="submit" id="submit" class="btn btn-primary">
                            <span class="indicator-label">Comentar</span>
                        </button>
                    </div>
                </form>
            </div>
        </form>
    </div>
</div>