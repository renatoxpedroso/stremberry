@model IEnumerable<Streamberry.Models.StreamingModel>

@{
    ViewData["Title"] = "Catalogo de Streamings";
}

@section Scripts {
    <script src="~/js/streaming/index.js"></script>
}

@section Breadcomb {
    <div class="col-md-10 page-title d-flex flex-column justify-content-center flex-wrap me-3">
        <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">Streamings</h1>
        <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
            <li class="breadcrumb-item text-muted">
                <a href="/Streaming/Index" class="text-muted text-hover-primary">Início</a>
            </li>
            <li class="breadcrumb-item text-muted">Catálogo de Streamings</li>
        </ul>
    </div>

    <div class="containerNovo col-md-2">
        <a asp-controller="Streaming" asp-action="Cadastro" class="buttonNovoCadastro btn fw-bold btn-primary" data-bs-toggle="tooltip" title="Cadastrar Novo Streaming">Cadastrar Novo Streaming</a>
    </div>
}

<div class="d-flex flex-column gap-7 gap-lg-10">
    <div class="card card-flush">
        <div class="card-header border-0 pt-6">
            <div class="flex-row-fluid gap-5" data-kt-docs-table-toolbar="base">
                <div class="form-group row">

                    <div class="col-md-10 mb-3">
                        <label class="form-label">Nome</label>
                        <input id="nome" value="" class="form-control mb-md-0 input-inteiro" placeholder="Nome" maxlength="150" />
                    </div>

                    <div class="col-md-2">
                        <div class="container">
                            <button type="button" class="btn btn-primary float-end mt-8 w-49" data-bs-toggle="tooltip" title="Filtrar" data-kt-docs-table-filter="filter">
                                <span class="svg-icon svg-icon-6 svg-icon-muted me-1">
                                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M19.0759 3H4.72777C3.95892 3 3.47768 3.83148 3.86067 4.49814L8.56967 12.6949C9.17923 13.7559 9.5 14.9582 9.5 16.1819V19.5072C9.5 20.2189 10.2223 20.7028 10.8805 20.432L13.8805 19.1977C14.2553 19.0435 14.5 18.6783 14.5 18.273V13.8372C14.5 12.8089 14.8171 11.8056 15.408 10.964L19.8943 4.57465C20.3596 3.912 19.8856 3 19.0759 3Z" fill="currentColor"></path>
                                    </svg>
                                </span>
                                Pesquisar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card-body">
            @Html.AntiForgeryToken()
            <table id="datatable" class="table align-middle table-row-dashed fs-6 gy-5">
                <thead>
                    <tr class="text-start text-gray-400 fw-bold fs-7 text-uppercase gs-0">
                        <th class="w-10px pe-2" width="0%">
                        </th>
                        <th>Nome</th>
                        <th class="align-right"></th>
                    </tr>
                </thead>
                <tbody class="text-gray-600 fw-semibold"></tbody>
            </table>
        </div>
    </div>
</div>