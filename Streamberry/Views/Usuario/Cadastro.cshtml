@model Streamberry.Models.UsuarioModel

@{
    ViewData["Title"] = "Cadastro de Usuário";
}

@section Breadcomb {
    <div class="col-md-10 page-title d-flex flex-column justify-content-center flex-wrap me-3">
        @if (Model.Id != Guid.Empty)
        {
            <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">Editar Usuário</h1>
        }
        else
        {
            <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">Cadastrar Usuário</h1>
        }

        <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
            <li class="breadcrumb-item text-muted">
                <a href="/Usuario" class="text-muted text-hover-primary">Usuários</a>
            </li>
            @if (Model.Id != Guid.Empty)
            {
                <li class="breadcrumb-item text-muted">Editar</li>
            }
            else
            {
                <li class="breadcrumb-item text-muted">Adicionar</li>
            }
        </ul>
    </div>
}
<hr />

<div class="d-flex flex-column gap-7 gap-lg-10">
    <div class="card card-flush">
        <div class="card-header border-0 pt-6">
            <div class="flex-row-fluid gap-5" data-kt-docs-table-toolbar="base">
                <div class="form-group row">

                    <form asp-action="Gravar">
                        <input type="hidden" asp-for="Id" id="Id" />
                        <div class="d-flex flex-column flex-row-fluid gap-7 gap-lg-10">
                            <div class="d-flex flex-column gap-7 gap-lg-10">
                                <div class="card card-flush">

                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <div class="campoCadastro form-group">
                                        <label asp-for="Nome" class="control-label"></label>
                                        <input asp-for="Nome" class="form-control" placeholder="Nome" />
                                        <span asp-validation-for="Nome" class="text-danger"></span>
                                    </div>

                                    <div class="campoCadastro form-group">
                                        <label asp-for="Email" class="control-label"></label>
                                        <input asp-for="Email" class="form-control" placeholder="E-mail" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <div class="campoCadastro form-group">
                                        <label asp-for="Senha" class="control-label"></label>
                                        <input type="password" asp-for="Senha" class="form-control" placeholder="Senha" />
                                        <span asp-validation-for="Senha" class="text-danger"></span>
                                    </div>

                                    <div class="campoCadastro form-group">
                                        <label asp-for="Perfil" class="control-label"></label>
                                        <select asp-for="Perfil" class="form-select form-select-solid" data-control="select2" data-hide-search="true" data-allow-clear="true">
                                            @if (Model.Perfil == Streamberry.Enum.Enums.enPerfilUsuario.Administrador)
                                            {
                                                <option value="0" selected>Administrador</option>
                                                <option value="1">Usuário</option>
                                            }
                                            else if (Model.Perfil == Streamberry.Enum.Enums.enPerfilUsuario.Usuario)
                                            {
                                                <option value="0">Administrador</option>
                                                <option value="1" selected>Usuário</option>
                                            }
                                            else
                                            {
                                                <option value="0">Administrador</option>
                                                <option value="1" selected>Usuário</option>
                                            }
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="containerCadastro d-flex justify-content-end">
                                <button type="reset" class="btn btn-light btn-active-light-primary me-2" onclick="location.href='/Usuario'">Cancelar</button>
                                <button type="submit" id="submit" class="btn btn-primary">
                                    <span class="indicator-label">Salvar</span>
                                </button>
                            </div>
                        </div>
                        </br>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>